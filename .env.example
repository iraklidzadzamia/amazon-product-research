# Reddit API (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=LeadFinder/1.0

# Google Maps/Places API (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_MAPS_API_KEY=your_api_key_here

# Meta Ad Library API (get from https://developers.facebook.com/tools/explorer/)
# Copy your User Access Token from Graph API Explorer
META_ACCESS_TOKEN=your_meta_access_token_here

# Google Sheets API (optional, for export)
# Download credentials.json from Google Cloud Console instead

# Apify API (get from https://console.apify.com/account/integrations)
APIFY_API_TOKEN=your_apify_api_token_here

# OpenAI API (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here
